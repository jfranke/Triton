
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context="cse190.triton.GamePlay">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Check"
    android:id="@+id/deal"
        android:layout_alignTop="@+id/fold"
        android:layout_toRightOf="@+id/fold"
        android:layout_toEndOf="@+id/fold" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="who wins"
    android:id="@+id/winner"
    android:layout_below="@+id/p2c2"
    android:layout_alignLeft="@+id/deal"
    android:layout_alignStart="@+id/deal" />


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p1c1"
    android:visibility="visible"
    android:src="@drawable/b1fv"
    android:layout_alignBottom="@+id/playerMoney"
    android:layout_toRightOf="@+id/flop2"
    android:layout_toEndOf="@+id/flop2" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p1c2"
    android:src="@drawable/b1fv"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/p1c1"
    android:layout_toEndOf="@+id/p1c1" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p2c1"
    android:src="@drawable/b1fv"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/flop2"
    android:layout_toEndOf="@+id/flop2" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/p2c2"
    android:src="@drawable/b1fv"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/flop3"
    android:layout_toEndOf="@+id/flop3" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/flop1"
    android:src="@drawable/b1fv"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/pot"
    android:layout_toEndOf="@+id/pot"
    android:layout_marginLeft="43dp"
    android:layout_marginStart="43dp" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/flop2"
    android:src="@drawable/b1fv"
    android:layout_alignTop="@+id/flop1"
    android:layout_toRightOf="@+id/flop1"
    android:layout_toEndOf="@+id/flop1" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/flop3"
    android:src="@drawable/b1fv"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/flop2"
    android:layout_toEndOf="@+id/flop2" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/turn"
    android:src="@drawable/b1fv"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/river"
    android:layout_toStartOf="@+id/river" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/river"
    android:src="@drawable/b1fv"
    android:layout_alignTop="@+id/turn"
    android:layout_toRightOf="@+id/p1c2"
    android:layout_toEndOf="@+id/p1c2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1000"
        android:id="@+id/playerMoney"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/p1c1"
        android:layout_toStartOf="@+id/p1c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Player Name"
        android:id="@+id/playerID"
        android:layout_toLeftOf="@+id/p1c1"
        android:layout_toStartOf="@+id/p1c1"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/deal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="AI"
        android:id="@+id/aiName"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/p2c1"
        android:layout_toStartOf="@+id/p2c1"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1000"
        android:id="@+id/aiMoney"
        android:layout_below="@+id/aiName"
        android:layout_toLeftOf="@+id/p2c1"
        android:layout_toStartOf="@+id/p2c1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pot: 0"
        android:id="@+id/pot"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fold"
        android:id="@+id/fold"
        android:layout_alignTop="@+id/p1c2"
        android:layout_toRightOf="@+id/river"
        android:layout_toEndOf="@+id/river" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raise"
        android:id="@+id/raise"
        android:layout_alignTop="@+id/deal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/raiseValue"
        android:layout_above="@+id/deal"
        android:layout_toRightOf="@+id/winner"
        android:layout_toEndOf="@+id/winner"
        android:text="0" />

</RelativeLayout>

