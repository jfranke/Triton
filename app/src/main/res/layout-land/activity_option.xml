<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse190.triton.OptionActivity">

    <TextView android:text="Select your options" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/userID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/players"
        android:layout_alignEnd="@+id/players" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play!"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Number of Opponents?"
        android:id="@+id/players"
        android:layout_below="@+id/backButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Username"
        android:id="@+id/ID"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/userID"
        android:layout_alignStart="@+id/userID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userID"
        android:hint="Name to be called"
        android:text="Minh"
        android:layout_below="@+id/ID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeOptions"
        android:src="@drawable/volumeoption"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:layout_alignRight="@+id/userID"
        android:layout_alignEnd="@+id/userID" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back"
        android:background="@null"
        android:onClick="goBack"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aiName"
        android:text="John"
        android:layout_alignTop="@+id/spinner1"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aiName2"
        android:text="Albert"
        android:layout_below="@+id/userID"
        android:layout_alignLeft="@+id/aiName"
        android:layout_alignStart="@+id/aiName"
        android:layout_alignRight="@+id/aiName"
        android:layout_alignEnd="@+id/aiName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aiName3"
        android:text="Susan"
        android:layout_below="@+id/aiName2"
        android:layout_alignLeft="@+id/aiName2"
        android:layout_alignStart="@+id/aiName2"
        android:layout_alignRight="@+id/aiName2"
        android:layout_alignEnd="@+id/aiName2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name of Opponents"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/players"
        android:layout_alignRight="@+id/textview"
        android:layout_alignEnd="@+id/textview" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ante On"
        android:id="@+id/anteOnBox"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userID"
        android:layout_alignStart="@+id/userID" />

</RelativeLayout>
